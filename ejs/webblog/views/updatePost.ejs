<%- include('partials/header') %>
<div class="container my-5">
  <h1 class="text-center mb-4">Update Post</h1>
  <form action="/updatePost/<%= post.id %>" method="POST" class="shadow p-4 bg-white rounded">
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" name="title" id="title" class="form-control" value="<%= post.title %>" required>
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Content:</label>
      <textarea name="content" id="content" class="form-control" rows="5" required><%= post.content %></textarea>
    </div>
    <button type="submit" class="btn btn-success">Update Post</button>
  </form>
</div>
<%- include('partials/footer') %>
