<%- include('partials/header') %>
<div class="container my-5">
  <h1 class="text-center mb-4">All Posts</h1>
  <% if (posts.length > 0) { %>
    <div class="row">
      <% posts.forEach(post => { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
              <a href="/updatePost/<%= post.id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/deletePost/<%= post.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center">
      <p class="text-muted">No posts available. Create one!</p>
    </div>
  <% } %>
</div>
<%- include('partials/footer') %>
